{
  "name": "free-ntfs-for-mac",
  "version": "1.4.3",
  "description": "免费的 macOS NTFS 读写工具 - Electron 界面版",
  "main": "scripts/main.js",
  "scripts": {
    "setup": "./ninja/izanaki.sh",
    "sync-version": "node ninja/sync-version.js",
    "build:ts": "tsc",
    "build:stylus": "stylus src/styles/main.styl -o styles.css",
    "build:all": "pnpm run sync-version && pnpm run build:stylus && pnpm run build:ts",
    "watch:ts": "tsc --watch 2>&1 | node ninja/filter-tsc-output.js || true",
    "watch:stylus": "stylus -w src/styles/main.styl -o styles.css --quiet",
    "watch:all": "pnpm run watch:stylus & pnpm run watch:ts",
    "start": "pnpm run build:all && electron .",
    "dev": "pnpm run watch:all & pnpm run build:all && electron . --dev",
    "dev:reload": "pnpm add -D electron-reloader && pnpm run dev",
    "build": "./ninja/build.sh",
    "build:clean": "./ninja/build-clean.sh",
    "build:dmg": "./ninja/build.sh --dmg",
    "build:zip": "./ninja/build.sh --zip",
    "build:arm64": "./ninja/build.sh --arm64"
  },
  "keywords": [
    "ntfs",
    "macos",
    "electron"
  ],
  "author": "hoochanlon",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "sharp": "^0.34.5",
    "stylus": "^0.63.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "node-pty": "^1.1.0",
    "pnpm": "^10.27.0"
  },
  "build": {
    "appId": "io.hoochanlon.github",
    "productName": "Nigate",
    "icon": "src/imgs/ico/flash.icns",
    "npmRebuild": false,
    "electronDownload": {
      "cache": ".electron-cache"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "scripts/**/*",
      "src/html/**/*",
      "src/imgs/**/*",
      "src/locales/**/*",
      "config/**/*",
      "src/ico/**/*",
      "src/docs/**/*",
      "styles.css",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "src/imgs/ico/flash.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSHighResolutionCapable": true,
        "NSRequiresAquaSystemAppearance": false
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "src/imgs/ico/flash.svg",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 150
        },
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 270,
          "type": "file",
          "path": "README.txt"
        }
      ],
      "window": {
        "width": 540,
        "height": 450
      }
    }
  }
}
