// home.html 的内联样式
.home-page
  display flex
  flex-direction column
  height 100vh
  background var(--bg-primary)

.home-header
  background var(--bg-secondary)
  border-bottom 1px solid var(--border)
  padding 12px 24px
  display flex
  justify-content space-between
  align-items center
  -webkit-app-region drag

  h1
    font-size 18px
    font-weight 600
    color var(--text-primary)
    margin 0

.home-actions
  display flex
  gap 8px
  -webkit-app-region no-drag

.home-content
  flex 1
  overflow-y auto
  padding 40px
  display flex
  flex-direction column
  align-items center
  justify-content center

.modules-grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(280px, 1fr))
  gap 24px
  max-width 900px
  width 100%

.module-card
  background var(--bg-secondary)
  border 1px solid var(--border)
  border-radius 12px
  padding 32px
  cursor pointer
  transition all 0.3s ease
  text-align center
  display flex
  flex-direction column
  align-items center
  gap 16px

  &:hover
    border-color var(--accent)
    box-shadow 0 4px 16px rgba(0, 122, 204, 0.2)
    transform translateY(-2px)

.module-icon
  font-size 48px
  margin-bottom 8px

.module-title
  font-size 20px
  font-weight 600
  color var(--text-primary)
  margin 0

.module-description
  font-size 14px
  color var(--text-secondary)
  margin 0
  line-height 1.6

.module-badge
  display inline-block
  padding 4px 12px
  border-radius 12px
  font-size 12px
  font-weight 500
  margin-top 8px

  &.ready
    background rgba(78, 201, 176, 0.2)
    color var(--success)

  &.warning
    background rgba(220, 220, 170, 0.2)
    color var(--warning)

  &.error
    background rgba(244, 135, 113, 0.2)
    color var(--error)
