// macOS 风格主题变量定义
// 深色模式变量（基于 macOS Dark Mode）
dark-bg-primary = #1d1d1f
dark-bg-secondary = #2c2c2e
dark-bg-tertiary = #3a3a3c
dark-text-primary = #ffffff
dark-text-secondary = #98989d
dark-border = #38383a
dark-shadow = rgba(0, 0, 0, 0.4)

// 浅色模式变量（基于 macOS Light Mode）
light-bg-primary = #ffffff
light-bg-secondary = #f5f5f7
light-bg-tertiary = #e5e5ea
light-text-primary = #000000
light-text-secondary = #6e6e73
light-border = #d2d2d7
light-shadow = rgba(0, 0, 0, 0.08)

// macOS 风格通用颜色
accent = #007aff
accent-hover = #0051d5
success = #34c759
warning = #ff9500
error = #ff3b30

// 默认使用深色模式变量
bg-primary = dark-bg-primary
bg-secondary = dark-bg-secondary
bg-tertiary = dark-bg-tertiary
text-primary = dark-text-primary
text-secondary = dark-text-secondary
border = dark-border
shadow = dark-shadow
